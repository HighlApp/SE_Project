<VBox prefHeight="720.0" prefWidth="1045.0" xmlns="http://javafx.com/javafx/8.0.191" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.polsl.largetableviewer.main.MainController">
   <children>
      <HBox prefHeight="40.0" prefWidth="1097.0" style="-fx-background-color: #D5D5D5;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="750.0" prefWidth="1300.0" text="Multiple Large Text File Viewer">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <GridPane alignment="center" hgap="10" prefHeight="426.0" prefWidth="1045.0" vgap="10">
          <padding>
            <Insets left="40.0" right="40.0" top="40.0" />
         </padding>
          <columnConstraints>
              <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="201.0">
        </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="113.0" prefWidth="219.0" />
              <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="113.0" prefWidth="257.0">
        </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="264.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="323.0" />
          </columnConstraints>
          <!-- FileName Text Field -->
          <TextField fx:id="fileNameField" editable="false" onMouseClicked="#openFileChooser" prefHeight="40" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
      
                  
          <!-- Add Submit Button -->
          <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="49.0" prefWidth="126.0" text="Run" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="10" GridPane.rowSpan="1">
              <GridPane.margin>
                  <Insets bottom="20" left="0" right="0" top="20" />
              </GridPane.margin>
          </Button>
         <Label text="Input file : " GridPane.rowIndex="1" />
         <CheckBox fx:id="transposedCheckBox" mnemonicParsing="false" prefHeight="21.0" prefWidth="117.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
            <rotationAxis>
               <Point3D y="1.0" z="1.0" />
            </rotationAxis>
         </CheckBox>
         <Label text="Transposed : " GridPane.rowIndex="9" />
         <Label text="Column export range : " GridPane.rowIndex="6" />
         <Label layoutX="57.0" layoutY="292.0" text="Row export range : " GridPane.rowIndex="7" />
         <Label text="Filter : " GridPane.rowIndex="4" GridPane.rowSpan="2" />
         <Label text="Field max length : " GridPane.rowIndex="8" />
         <Spinner fx:id="fieldMaxLength" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <Button fx:id="previewButton" onAction="#handleRefreshButtonAction" mnemonicParsing="false" prefHeight="31.0" prefWidth="137.0" text="Refresh preview" GridPane.rowIndex="11">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </Button>
         <Label alignment="CENTER" prefHeight="21.0" prefWidth="754.0" text="Preview panel" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="11">
            <font>
               <Font size="30.0" />
            </font>
            <GridPane.margin>
               <Insets left="25.0" />
            </GridPane.margin>
         </Label>
          <TextField fx:id="cFilterRange" promptText="Columns to filter" GridPane.columnIndex="1" GridPane.rowIndex="5" />
          <TextField fx:id="cExportRange" promptText="ex. 1-4;6-7;12-20" GridPane.columnIndex="1" GridPane.rowIndex="6" />
          <TextField fx:id="rExportRange" promptText="ex. 1-4;6-7;12-20" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         <Label text="Column separator : " GridPane.rowIndex="2" />
         <TextField fx:id="colSeparator" prefWidth="156.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <TextField fx:id="cFilterStringValue" promptText="Enter string condition" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label text="Filter storage" GridPane.columnIndex="4" GridPane.rowIndex="7">
            <font>
               <Font size="28.0" />
            </font>
         </Label>
          <ChoiceBox fx:id="selectSavedFilterChoiceBox" prefWidth="150.0" value="Select filter" GridPane.columnIndex="4" GridPane.rowIndex="8">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Select filter" />
                      <String fx:value="Saved filter 1" />
                      <String fx:value="Saved filter 2" />
                      <String fx:value="Saved filter 3" />
                  </FXCollections>
              </items>
          </ChoiceBox>
         <Button fx:id="saveNewFilterButton" mnemonicParsing="false" onAction="#handleSaveNewFilterButtonAction" text="Save new filter" GridPane.columnIndex="4" GridPane.rowIndex="9" />
         <Label text="Row separator : " GridPane.rowIndex="3" />
         <TextField fx:id="rowSeparator" prefWidth="156.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="109.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="50.0" prefHeight="50.0" />
         </rowConstraints>
      </GridPane>
      <TextArea fx:id="fileContentsTextArea" prefHeight="257.0" prefWidth="1045.0" />
   </children>
</VBox>
