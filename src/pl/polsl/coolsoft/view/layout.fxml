<VBox prefHeight="720.0" prefWidth="1045.0" xmlns="http://javafx.com/javafx/8.0.191" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.polsl.coolsoft.controller.MainController">
   <children>
      <HBox prefHeight="40.0" prefWidth="1097.0" style="-fx-background-color: #D5D5D5;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="750.0" prefWidth="1300.0" text="Multiple Large Text File Viewer">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <GridPane alignment="center" hgap="10" prefHeight="426.0" prefWidth="1045.0" vgap="10">
          <padding>
            <Insets left="40.0" right="40.0" top="40.0" />
         </padding>
          <columnConstraints>
              <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="201.0">
        </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="113.0" prefWidth="206.0" />
              <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="113.0" prefWidth="205.0">
        </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="323.0" />
          </columnConstraints>
          <!-- FileName Text Field -->
          <TextField fx:id="fileNameField" editable="false" onMouseClicked="#openFileChooser" prefHeight="40" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
      
                  
          <!-- Add Submit Button -->
          <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="49.0" prefWidth="126.0" text="Run" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
              <GridPane.margin>
                  <Insets bottom="20" left="0" right="0" top="20" />
              </GridPane.margin>
          </Button>
         <Label text="Input file : " GridPane.rowIndex="1" />
         <CheckBox mnemonicParsing="false" prefHeight="21.0" prefWidth="117.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <rotationAxis>
               <Point3D y="1.0" z="1.0" />
            </rotationAxis>
         </CheckBox>
         <Label text="Transposed : " GridPane.rowIndex="6" />
         <Label text="Column export range : " GridPane.rowIndex="3" />
         <Label layoutX="57.0" layoutY="292.0" text="Row export range : " GridPane.rowIndex="4" />
         <Label text="Filter : " GridPane.rowIndex="2" />
         <ChoiceBox fx:id="filterChoiceBox" onAction="#handleFilterChoiceBoxAction" prefHeight="31.0" prefWidth="187.0" value="None" GridPane.columnIndex="3" GridPane.rowIndex="2">
             <items>
                 <FXCollections fx:factory="observableArrayList">
                     <String fx:value="None" />
                     <String fx:value="Filter 1" />
                     <String fx:value="Filter 2" />
                     <String fx:value="Filter 3" />
                 </FXCollections>
             </items>
         </ChoiceBox>
         <Label text="Field max length : " GridPane.rowIndex="5" />
         <Spinner fx:id="fieldMaxLength" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="137.0" text="Refresh preview" GridPane.rowIndex="8">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </Button>
         <Label alignment="CENTER" prefHeight="21.0" prefWidth="754.0" text="Preview panel" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="8">
            <font>
               <Font size="30.0" />
            </font>
            <GridPane.margin>
               <Insets left="25.0" />
            </GridPane.margin>
         </Label>
          <TextField fx:id="cFilterRange" GridPane.columnIndex="1" GridPane.rowIndex="2" />
          <TextField fx:id="cExportRange" GridPane.columnIndex="1" GridPane.rowIndex="3" />
          <TextField fx:id="rExportRange" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="50.0" prefHeight="50.0" />
         </rowConstraints>
      </GridPane>
      <TextArea fx:id="fileContentsTextArea" prefHeight="257.0" prefWidth="1045.0" />
   </children>
</VBox>
